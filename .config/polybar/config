[bar/base]
	# dpi      = 192
	width    = 100%
	height   = 32
	offset-x = 0
	offset-y = 0

	bottom = true

	background = ${xrdb:color0}
	foreground = ${xrdb:color7}

	border-bottom-size  = 0
	border-top-size     = 0

	border-left-size  = 0
	border-right-size = 0

	border-bottom-color = ${xrdb:color0}
	border-top-color    = ${xrdb:color0}

	border-left-color = ${xrdb:color0}
	border-right-colo = ${xrdb:color0}

	spacing            = 0
	padding-left       = 1
	padding-right      = 1
	module-margin-left = 0

	font-N = <fontconfig pattern>;<vertical offset>
	font-0 = WunconSiji:size=14;2
	font-1 = lemon:pixelsize=18;1
	font-2 = lemon:pixelsize=18;1
	font-3 = Kochi Gothic:size=14;1

	modules-left   = spotify volume
	modules-center = workspaces
	modules-right  = essid battery date
  tray-position = right 
  tray-padding = 0

	fixed-center = true

;--------------------------------------------
; modules                                   ;
;--------------------------------------------

[module/network]
	type          = internal/network
	interface     = wlp3s0
	ping-interval = 3

[module/xwindow]
	y-offset      = 10
	type          = internal/xwindow
	format        = <label>
	label         = %title:0:50:%
	label-padding = 1

[module/date]
	type     = internal/date
	interval = 1.0
	time     = "%a %d %b %I:%M %p "
	label    = "%time% "

	format         = <label>
	format-padding = 0

	format-prefix            = " "
	format-prefix-background = ${xrdb:color0}
	format-prefix-foreground = ${xrdb:color2}
	format-prefix-padding    = 1

	label-background = ${xrdb:color0}
	label-foreground = ${xrdb:color2}
	label-padding    = 0

[module/spotify]
    type = custom/script
    exec = sh ~/.config/polybar/modules/spotify
    interval = 1
 
    format-prefix            = 
    format-prefix-background = ${colors.cpu_p_bg}
    format-prefix-foreground = ${colors.modules_prefix_fg}
    format-prefix-padding    = 1
 
    label-background = ${xrdb:color0}
    label-foreground = ${xrdb:color5}
    label-padding    = 1
 
    click-left   = playerctl play-pause
    click-middle = playerctl previous
    click-right  = playerctl next

[module/previous]
	type = custom/text

	content = ""
	content-background = ${xrdb:color0}
	content-foreground = ${xrdb:color7}
	content-padding = 0

	click-left = mpc previous

[module/playpause]
	type = custom/script

	exec = sh ~/.config/polybar/playpause.sh

	interval= 1

	label = %output%
	label-background = ${xrdb:color0}
	label-foreground = ${xrdb:color7}
	label-padding = 1

	click-left = mpc toggle

[module/next]
	type = custom/text

	content = ""

	content-background = ${xrdb:color0}
	content-foreground = ${xrdb:color7}
	content-padding = 0

	click-left = mpc next

[module/music]
	type = internal/mpd

	host = 127.0.0.1
	port = 6600

	interval = 2

	format-online = <label-song>

	label-song         = "  %artist% - %title% "
	label-song-padding = 2
	label-song-background = ${xrdb:color0}
	label-song-foreground = ${xrdb:color5}

	format-online-prefix-padding = 1

[module/battery]
	type          = internal/battery
	full-at       = 98
	battery       = BAT0
