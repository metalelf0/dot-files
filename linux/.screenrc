startup_message off
nethack on
vbell off

# utf8 on on
defutf8 on
encoding UTF-8
defencoding UTF-8

bind ^r screen su -
bind ^h colon "screen man -a "
#bind v search "vim "
bind b select links
bind c select zsh
bind m select man
bind t select htop
bind r select su

# eleet screen saver :D
#blankerprg nice -n 19 cmatrix -asbu 2

#idle 180 lockscreen

# caption always
caption always "%{=b Wk}%-w%{= bW}%t%{-} %+w%-=%{rY} %c %d%M"

autodetach on

# XXX: try this
#windowlist string "%u"
#windowlist
#windowlist string "%{W}%3n %{+b y}%t%{r}%=%f "
windowlist title "Num F      Title"
windowlist string "%{W}%3n %{+b r}%6f %011=%{y}%t"

#bind "" windowlist -m -b

bind ^j focus down
bind ^k focus up
bind k

# source .screenrc-${SHLVL}

# vi:ft=screen:

term screen-256color
termcapinfo xterm* ti@:te@
